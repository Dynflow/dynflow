<ul class="plan-step">
  <li>
    <p>
      <span class="label label-<%= step_css_class(step) %>"><%= h("#{step.action_class}") %></span>
    </p>
    <%= step_error(step) %>
    <% step.children.each do |sub_step_id| %>
      <%= erb :plan_step, locals: { step: @plan.steps[sub_step_id] } %>
    <% end %>
  </li>
</ul>

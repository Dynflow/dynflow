<h1>Listing execution plans</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Initiated by</th>
      <th>State</th>
      <th>Result</th>
      <th></th>
    </tr>
  </thead>

<% @plans.each do |plan| %>
  <tr>
    <td><%= h(plan.id) %></td>
    <td><%= h(plan.root_plan_step.action_class.name) %></td>
    <th><%= h(plan.state) %></th>
    <th><%= h(plan.result) %></th>
    <td><a href="<%= h(url("/#{plan.id}")) %>">Show</a></td>
  </tr>

<% end %>
</table>
